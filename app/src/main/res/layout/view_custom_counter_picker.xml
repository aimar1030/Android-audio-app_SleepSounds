<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/picker_hour"
            android:layout_marginLeft="50dp">

            <com.zenlabs.sleepsounds.customview.CustomPicker
                android:id="@+id/counter_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
            <com.zenlabs.sleepsounds.customview.CustomPicker
                android:id="@+id/counter_hour_char"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_toRightOf="@id/counter_hour"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@+id/picker_hour">

            <com.zenlabs.sleepsounds.customview.CustomPicker
                android:id="@+id/counter_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
            <com.zenlabs.sleepsounds.customview.CustomPicker
                android:id="@+id/counter_minutes_char"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_toRightOf="@+id/counter_minutes"
                android:focusableInTouchMode="true"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>