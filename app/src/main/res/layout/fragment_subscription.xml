<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/subscribe_bg" />

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="430dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/subscribe_detail_bar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:textSize="36dp"
                android:textColor="#FFFFFF"
                android:text="Subscribe Today!"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:id="@+id/subscribe_title"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/subscribe_title"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:textSize="18dp"
                    android:textColor="#FFFFFF"
                    android:text="•  76 Sounds"
                    android:id="@+id/subscribe_detail_1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:textSize="18dp"
                    android:textColor="#FFFFFF"
                    android:text="•  Millions of Combinations"
                    android:id="@+id/subscribe_detail_2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:textSize="18dp"
                    android:textColor="#FFFFFF"
                    android:text="•  No Ads"
                    android:id="@+id/subscribe_detail_3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#FFFFFF"
                    android:text="•  Don't Wait. Start Sleeping Better Now."
                    android:id="@+id/subscribe_detail_4"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/subscribe_button_bar"
            android:layout_below="@+id/subscribe_detail_bar"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="296dp"
                android:layout_height="111dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/buyfull"
                android:id="@+id/buy_full_bt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="1 PAYMENT OF $6.99"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="89dp"
                android:id="@+id/all_unlock_price"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:orientation="horizontal"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="14dp"
                    android:id="@+id/buy_3months_bt">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/buy3months"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="36dp"
                        android:text="$4.99"
                        android:id="@+id/month3_unlock_price"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="14dp"
                    android:id="@+id/buy_1month_bt">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/buy1month"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="36dp"
                        android:text="$2.99"
                        android:id="@+id/month1_unlock_price"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/close"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/close_subscribe"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:id="@+id/healthtap_bt">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/healthtap"
            android:layout_centerInParent="true"
            android:scaleType="center"/>

    </RelativeLayout>

</RelativeLayout>