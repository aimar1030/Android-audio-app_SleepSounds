<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/scrollview_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_height"
        android:background="@color/menu_background"
        android:id="@+id/favorit_nav">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clear"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/menu_margin"
            android:id="@+id/close_bt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add Favorite"
            android:layout_centerInParent="true"
            android:textColor="@color/counter_text_color"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/menu_margin"
            android:layout_centerVertical="true"
            android:id="@+id/add_favorit"/>

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/favorite_name_in"
        android:gravity="center"
        android:hint="ENTER FAVORITE NAME"
        android:textColor="#000000"
        android:textColorHint="#BDBDC2"
        android:background="#F2F2F2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/favorit_header_height">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/black_bar"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="@dimen/sound_manager_sash_widht"
            android:layout_height="match_parent"
            android:src="@drawable/green_sash"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:textColor="@color/unlock_view_bt_color"
            android:ellipsize="end"
            android:singleLine="true"
            android:id="@+id/favorite_item_title"/>
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/favorite_sound_list">

    </TableLayout>

</LinearLayout>