<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/information_dialog_background"
    android:orientation="vertical">

    <com.zenlabs.sleepsounds.customview.FontTextView
        android:id="@+id/informationDialogTitleTextVIew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:padding="@dimen/information_dialog_paddings"
        android:textSize="@dimen/information_dialog_title_text_size"
        font:customFont="SohoGothicPro-Bold.otf" />

    <com.zenlabs.sleepsounds.customview.FontTextView
        android:id="@+id/informationDialogContentTextVIew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:paddingLeft="@dimen/information_dialog_paddings"
        android:paddingRight="@dimen/information_dialog_paddings"
        android:paddingBottom="@dimen/information_dialog_paddings"
        android:textSize="@dimen/information_dialog_button_text_size"
        font:customFont="SohoGothicPro-Regular.otf" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/black"/>

    <com.zenlabs.sleepsounds.utils.FontButton
        android:id="@+id/informatioDialogButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:text="@string/ok"
        android:padding="@dimen/information_dialog_paddings"
        android:textColor="@color/blue_information_popup_text_color"
        android:textSize="@dimen/information_dialog_button_text_size"
        font:customFont="SohoGothicPro-Bold.otf" />

</LinearLayout>
